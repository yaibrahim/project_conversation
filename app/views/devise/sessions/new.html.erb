<div class="container">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>


<style>
body {
  font-family: Arial, sans-serif;
  background-color: #f4f7fc;
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  max-width: 400px;
  margin: 50px auto;
  padding: 20px;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

h2 {
  text-align: center;
  font-size: 24px;
  color: #333;
  margin-bottom: 20px;
}

.field {
  margin-bottom: 20px;
}

.field label {
  font-size: 14px;
  color: #555;
  margin-bottom: 5px;
  display: block;
}

.field input[type="email"],
.field input[type="password"] {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.field input[type="email"]:focus,
.field input[type="password"]:focus {
  border-color: #3182ce;
  outline: none;
}

.actions {
  text-align: center;
}

.actions input[type="submit"] {
  background-color: #3182ce;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.actions input[type="submit"]:hover {
  background-color: #2b6cb0;
}

.remember-me {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.remember-me input[type="checkbox"] {
  margin-right: 10px;
}

.links {
  text-align: center;
  margin-top: 20px;
}

.links a {
  color: #3182ce;
  text-decoration: none;
  font-size: 14px;
}

.links a:hover {
  text-decoration: underline;
}
</style>