<div class="container">
      <h2>Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up" %>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>

<style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
      }

      .container {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }

      h2 {
        text-align: center;
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
      }

      .field {
        margin-bottom: 20px;
      }

      .field label {
        font-size: 14px;
        color: #555;
        margin-bottom: 5px;
        display: block;
      }

      .field input[type="email"],
      .field input[type="password"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
      }

      .field input[type="email"]:focus,
      .field input[type="password"]:focus {
        border-color: #3182ce;
        outline: none;
      }

      .actions {
        text-align: center;
      }

      .actions input[type="submit"] {
        background-color: #3182ce;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .actions input[type="submit"]:hover {
        background-color: #2b6cb0;
      }

      em {
        font-size: 12px;
        color: #666;
      }

      .links {
        text-align: center;
        margin-top: 20px;
      }

      .links a {
        color: #3182ce;
        text-decoration: none;
        font-size: 14px;
      }

      .links a:hover {
        text-decoration: underline;
      }
    </style>