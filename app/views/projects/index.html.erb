<h2 class="text-2xl font-bold mb-6">Projects</h2>

<div class="overflow-x-hidden">
  <%= link_to 'New Project', new_project_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
</div>

<div class="space-y-4">
  <% @projects.each do |project| %>
    <div class="p-4 border rounded shadow hover:shadow-lg transition-all duration-300">
      <h3 class="text-xl font-semibold hover:text-blue-600"><%= link_to project.name, project_path(project) %></h3>
      <p class="text-base text-gray-500">Status: <%= project.status %></p>
      <p class="mt-1 text-base text-gray-700"><%= truncate(project.description, length: 100) %></p>
    </div>
  <% end %>
</div>
