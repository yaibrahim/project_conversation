<style>
  .page-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .new-project-btn {
    background-color: #3b82f6;
    color: white;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1rem;
    transition: background-color 0.3s ease;
  }

  .new-project-btn:hover {
    background-color: #2563eb;
  }

  .project-list {
    margin-top: 1rem;
  }

  .project-card {
    padding: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    background-color: #ffffff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .project-card:hover {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #333;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .project-title:hover {
    color: #2563eb;
  }

  .project-status {
    font-size: 1rem;
    color: #6b7280;
  }

  .project-description {
    font-size: 1rem;
    color: #374151;
    margin-top: 0.5rem;
  }
</style>

<div class="page-container">
  <h2 class="page-title">Projects</h2>

  <div class="overflow-x-hidden">
    <%= link_to 'New Project', new_project_path, class: "new-project-btn" %>
  </div>

  <div class="project-list">
    <% @projects.each do |project| %>
      <div class="project-card">
        <h3 class="project-title"><%= link_to project.name, project_path(project) %></h3>
        <p class="project-status">Status: <%= project.status %></p>
        <p class="project-description"><%= truncate(project.description, length: 100) %></p>
      </div>
    <% end %>
  </div>
</div>
